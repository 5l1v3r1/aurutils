#compdef repofind

typeset -A opt_args

_repofind_opts=(
    '-l[List file:// repositories]'
    '-s[Select a local repository]'
)

_repofind_action_none() {
    _arguments -s : \
        "$_repofind_opts[@]" \
}

# main dispatcher
_repofind() {
    case $words[2] in
        *) _repofind_action_none ;;
    esac
}

_repofind "$@"

