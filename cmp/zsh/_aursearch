#compdef aursearch

typeset -A opt_args

_aursearch_opts=(
    '-F[Search by fixed string]'
    '-P[Search by PCRE pattern]'
    '-b[Search by pkgbase]'
    '-n[Search by name]'
    '-m[Search by maintainer]'
    '-v[Output more]'
    '-r[Output JSON]'
)

_aursearch_action_none() {
    _arguments -s : \
        "$_aursearch_opts[@]" \
}

# main dispatcher
_aursearch () {
    case $words[2] in
        *) _aursearch_action_none ;;
    esac
}

_aursearch "$@"

