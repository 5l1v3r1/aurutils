#!/bin/bash
readonly argv0=aurgrep
readonly aurweb='https://aur.archlinux.org'
readonly cache=${XDG_CACHE_HOME:-$HOME/.cache}/$argv0
readonly PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
set -o pipefail

# https://lists.archlinux.org/pipermail/aur-dev/2016-May/004036.html
declare -i delay=300
declare    list=packages

curl_date() {
    curl -fsSI "$1" | awk -F', ' '/^date:/ {print $2}'
}

curl_unzip() {
    curl -fsS "$1" -o - | gzip -d -
}

extract_head() {
    sed -n '1p' "$1"
    sed -i '1d' "$1"
}

readonly -f curl_date curl_unzip extract_head

while getopts :bt OPT; do
    case "$OPT" in
        b) list=pkgbase  ;;
        t) delay=$OPTARG ;;
    esac
done
shift $((OPTIND - 1))
OPTIND=1

mkdir -p "$cache"
chmod -c 700 "$cache"
cd "$cache" || exit

readonly uri=$aurweb/$list.gz

if [[ -s $list && -s timestamp ]]; then
    read -r epoch_l < <(date -d "$(awk -F', ' '{print $3}' timestamp)" '+%s')
    read -r epoch_r < <(date -d "$(curl_date "$uri")" '+%s')

    if ((epoch_l)) && ((epoch_r)) && ((epoch_r - epoch_l > delay)); then
        curl_unzip "$uri" > "$list" || exit # keep curl exit code
        extract_head "$list" > timestamp
    fi
else
    curl_unzip "$uri" > "$list" || exit
    extract_head "$list" > timestamp
fi

pcregrep "$@" "$list"

# vim: set et sw=4 sts=4 ft=sh:
