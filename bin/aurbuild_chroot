#!/bin/bash
set -e
readonly argv0=aurbuild_chroot
readonly PATH=/bin:/usr/bin
readonly PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'

machine=$(uname -m) || exit
directory=/var/lib/aurbuild/$machine
makepkg_conf=/usr/share/devtools/makepkg-$machine.conf
pacman_conf=/usr/share/devtools/pacman-extra.conf

declare -i prepare=0
declare -a makechrootpkg_args=()

conf_devtools() {
    printf '[options]\n'

    pacconf --config="$1" --options --raw
    printf '#CacheDir=\n'

    pacconf --repo-list | while IFS= read -r; do
        printf '[%s]\n' "$REPLY"
        pacconf --repo="$REPLY" --raw
    done
}

trap_exit() {
    if ! [[ -o xtrace ]]; then
        rm -rf "$tmp"
    fi
}

readonly -f conf_devtools trap_exit

while getopts :C:M:r:p OPT; do
    case $OPT in
        C) pacman_conf=$OPTARG  ;;
        M) makepkg_conf=$OPTARG ;;
        r) directory=$OPTARG    ;;
        p) prepare=1            ;;
    esac
done
shift $((OPTIND - 1))
OPTIND=1

if (($#)); then
    makechrootpkg_args=("$@")
fi

readonly pacman_conf makepkg_conf directory prepare

trap 'trap_exit' EXIT
tmp=$(mktemp -d)

if ((prepare)); then
    conf_devtools "$pacman_conf" > "$tmp"/pacman.conf

    if [[ -f $directory/root/.arch-chroot ]]; then
        # locking is done by systemd-nspawn
        arch-nspawn -C "$pacman_conf" -M "$makepkg_conf" \
            "$directory"/root pacman -Syu --noconfirm   
    else
        install -d "$directory" -m 755 -v || return
        mkarchroot -C "$pacman_conf" -M "$makepkg_conf" \
            "$directory"/root base-devel
    fi
else
    env PKGDEST="${PKGDEST:-$PWD}" makechrootpkg \
        -r "$directory" "${makechrootpkg_args[@]}"
fi
