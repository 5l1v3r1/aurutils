#!/bin/bash
readonly argv0=aurbuild_chroot
readonly PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'

machine=$(uname -m)
makechrootpkg_args=(-cu)
makepkg_conf=/usr/share/devtools/makepkg-$machine.conf
pacman_conf=/usr/share/devtools/pacman-extra.conf
directory=/var/lib/aurbuild/$machine

declare -i prepare=0

conf_devtools() {
    printf '[options]\n'
    pacconf --config="$1" --options --raw

    printf '#CacheDir=\n'

    pacconf --repo-list | while IFS= read -r; do
        printf '[%s]\n' "$REPLY"
        pacconf --repo="$REPLY" --raw
    done
}

prepare_chroot() {
    declare -r pacman_conf=$1 makepkg_conf=$2 directory=$3

    if [[ -f $directory/root/.arch-chroot ]]; then
        sudo arch-nspawn -C "$pacman_conf" -M "$makepkg_conf" \
            "$directory"/root pacman -Syu --noconfirm
    else
        sudo install -d "$directory" -m 755 -v
        sudo mkarchroot  -C "$pacman_conf" -M "$makepkg_conf" \
            "$directory"/root base-devel
    fi
}

trap_exit() {
    if ! [[ -o xtrace ]]; then
        rm -rf "$tmp"
    fi
}

readonly -f conf_devtools prepare_chroot trap_exit

unset binddir
while getopts B:C:D:M:p OPT; do
    case $OPT in
        B) binddir+=("$OPTARG") ;;
        C) pacman_conf=$OPTARG  ;;
        D) directory=$OPTARG    ;;
        M) makepkg_conf=$OPTARG ;;
        p) prepare=1            ;;
    esac
done
shift $((OPTIND - 1))
OPTIND=1

readonly binddir cache pacman_conf makepkg_conf directory prepare

if (($#)); then
    makechrootpkg_args=("$@")
fi

if [[ -v binddir ]]; then
    makechrootpkg_args+=("${binddir[@]}")
fi

trap 'trap_exit' EXIT
tmp=$(mktemp -d) || exit

if ((prepare)); then
    if conf_devtools "$pacman_conf" > "$tmp"/pacman.conf; then
        prepare_chroot "$tmp"/pacman.conf "$makepkg_conf" "$directory"
    else
        exit $?
    fi
else
    # XXX: makepkg options after end-of-options
    sudo PKGDEST="${PKGDEST:-$PWD}" makechrootpkg \
        -r "$directory" "${makechrootpkg_args[@]}"
fi
