#!/bin/bash
PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
set -e -o pipefail

argv0=aursync
aurweb=https://aur.archlinux.org
tmp=$(mktemp -d)

XDG_CACHE_HOME=${XDG_CACHE_HOME:-$HOME/.cache}
AURDEST=${AURDEST:-$XDG_CACHE_HOME/$argv0}

readonly argv0 aurweb tmp XDG_CACHE_HOME AURDEST

viewer() {
    if hash 2>/dev/null vifm; then
        vifm - '+view!'
    else
        command -- "${PAGER:-less}"
    fi
}

inspect() {
    xargs -i find {} -maxdepth 1 | viewer
}

revcheck() {
    #global tmp
    git fetch

    if [[ $(git rev-parse HEAD) != $(git rev-parse '@{upstream}') ]]; then
        git --no-pager log --patch --stat '..@{upstream}' >> "$tmp"/"$1".diff
        git stash
        git merge
    fi
}

clone() {
    #global aurweb
    while read -r base _; do
        ( if cd "$base" 2>/dev/null; then
              revcheck "$base"
          else
              git clone "$aurweb/$base".git
          fi
        ) >/dev/null
    done
}

aria() {
    #global tarpath tmp
    awk -v uri="$aurweb"/cgit/aur.git/snapshot '{
        gsub("+","%2b")
        gsub("@","%40")

        printf "%s/%s.tar.gz\n", uri, $1
    }' | aria2c -d "$tmp" -i -

    for ar in "$tmp"/*.tar.gz; do
        tar xvf "$ar"
    done
}

trap 'rm -rf "$tmp"' EXIT

source /usr/share/makepkg/util.sh

[[ -t 2 ]] && colorize

while getopts :cdiknut OPT; do
    case $OPT in
        c|+c) aurbuild_args+=(-c) ;;
        d|+d) nobuild=1           ;;
        i|+i) ignore+=("$OPTARG") ;;
        k|+k) insecure=1          ;;
        n|+n) noprepare=1         ;;
        u|+u) update=1            ;;
        t|+t) download=aria       ;;
        *) plain "usage: $argv0 [+-cdiknut} [--] ARGS..."
           exit 1 ;;
    esac
done
shift $((OPTIND - 1))
OPTIND=1

# Select file:// repository
read -r repo pool < <(repofind -s)

# Reuse selection for repofind (#82)
if ((update)); then
    update_targets=($(repofind -u "$repo" | awk '{print $1}'))

    if [[ ! ${update_targets[@]} ]]; then
        msg2 "No updates available"
    else
        set -- "$@" "${update_targets[@]}"
    fi
fi

if ((!$#)); then
    error "$argv0: no targets specified"
    exit 1
fi

# Use a separate tar directory to prevent conflicts with git.
mkdir -p "$AURDEST"/snapshot
chmod -c 700 "$AURDEST"

if [[ $download == aria ]]; then
    cd "$AURDEST"/snapshot
else
    cd "$AURDEST"
fi

# Package blacklist (#88)
printf '%s\n' "${ignore[@]}" > "$tmp"/filter

# aurchain → filter → pkgname{,pkgver}
aurchain "$@" | grep -wvf "$tmp"/filter | tee "$tmp"/chain_ver | awk '{print $1}' > "$tmp"/chain_name

# pkgname → json
xargs -a "$tmp"/chain_name -r aursearch -Fr > "$tmp"/raw

# json → pkgname pkgbase
jshon -F "$tmp"/raw -a -e results -a -e Name -u -p -e PackageBase -u | xargs -n2 > "$tmp"/pair_base

# pkgname → pkgbase → download
aursplit "$tmp"/pair_base < "$tmp"/chain_name | tee "$tmp"/chain_base | "${download:-clone}"

if ! ((noprepare)); then
    # pkgname pkgver → pkgname {up} → pkgbase {up}
    aursift -U < "$tmp"/chain_ver | aursplit "$tmp"/pair_base > "$tmp"/chain_sync

    # pkgbase {all} \ pkgbase {up}
    grep -Fxvf "$tmp"/chain_sync "$tmp"/chain_base > "$tmp"/chain_new
else
    cp "$tmp"/chain_base "$tmp"/chain_new
fi

# View changes and build files in one window (#77).
if ! ((insecure)); then
    ( shopt -s nullglob
      printf '%s\n' "$tmp"/*.diff | cat - "$tmp"/chain_new | inspect
    )
fi

((nobuild)) && exit

aurbuild_args+=(-d "$repo".db -r "$pool" -p "$pool" -a "$tmp"/chain_new)
aurbuild "${aurbuild_args[@]}" # -- "${makepkg_args[@]}"
