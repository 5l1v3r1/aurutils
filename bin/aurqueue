#!/bin/bash
# shellcheck disable=SC2016
readonly argv0=aurqueue
readonly PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
set -o pipefail

findsrc() {
    find -- "$@" -maxdepth 1 -type f -name .SRCINFO -print0
}

deps() {
    awk -v FS='[<=>]' '/pkgbase/ {
        read = 1; pb = $2
        printf("%s\t%s\n", pb, pb)
    } {
        if (read && $0 ~ /^\t(make|check)?depends/) {
            printf("%s\t%s\n", pb, $2)
        }
        if ($0 ~ /^$/) {
            read = 0    # split package
        }
    }' "$@"
}

base() {
    awk -v FS='[<=>]' '
    /pkgbase/ {
        pb = $2
    }
    /pkgname/ {
        printf("%s\t%s\n", $2, pb)
    }' "$@"
}

sub() {
    awk 'NR == FNR {
        x[$1] = $2; next
    } {
        if ($1 in x && !(x[$1] in seen)) {
            print x[$1]; seen[x[$1]];
        }
    }' "$@"
}

trap_exit() {
    if [[ ! -o xtrace ]]; then
        rm -rf "$tmp"
    fi
}

if ((!$#)); then
    exit 1
fi

tmp=$(mktemp -t "$argv0".XXXXXXXX) || exit
trap 'trap_exit' EXIT

findsrc "$@" | xargs -0 cat > "$tmp"

tsort <(deps "$tmp") | sub <(base "$tmp") - | grep -Fxf <(printf '%s\n' "$@") | tac

# vim: set et sw=4 sts=4 ft=sh:
