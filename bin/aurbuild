#!/bin/bash
PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
set -e

argv0=aurbuild
basedir=$PWD
machine=$(uname -m)
tmp=$(mktemp -dt "$argv0".XXXXXXXXXX)

declare -r PS4 argv0 basedir machine tmp
declare -i chroot=0 sign_pkg=0

gpg_args=(--verbose --detach-sign --no-armor --with-colons)
makechrootpkg_args=(-cnu)
makepkg_args=(-Lcrs)

trap_exit() {
    #global tmp
    if [[ ! -o xtrace ]]; then
        rm -rf "$tmp"
    fi
}

usage() {
    #global argv0
    plain "usage: $argv0 [-cs] -d <database> [-Capr] [--] <makepkg args>"
}

conf_single() {
    printf '[options]\n'
    pacconf --raw --options

    printf '[%s]\n' "$1"
    pacconf --raw --repo="$1"
}

db_replaces() {
    bsdcat "$1" | awk '/%REPLACES%/ {
        while(NF != 0) {getline; print}
    }'
}

find_package_path() {
    makepkg --packagelist | while IFS= read -r; do
        find "$1" -type f -regex ".+/$REPLY.pkg.+?" -print0
    done
}

trap 'exit' INT
trap 'trap_exit' EXIT
source /usr/share/makepkg/util.sh

if [[ -t 2 ]]; then
    colorize
fi

while getopts a:cC:d:r:s OPT; do
    case $OPT in
        a) queue=$OPTARG      ;;
        c) chroot=1           ;;
        C) container=$OPTARG  ;;
        d) database=$OPTARG   ;;
        r) root=$OPTARG       ;;
        s) sign_pkg=1         ;;
        *) usage; exit 1      ;;
    esac
done
shift $((OPTIND - 1))
OPTIND=1

# Reset option array if arguments are specified after --
if (($#)); then
    if ((chroot)); then
        makechrootpkg_args=("$@")
    else
        makepkg_args=("$@")
    fi
fi

if [[ $GPGKEY ]] && gpg --list-keys "$GPGKEY"; then
    gpg_args+=(-u "$GPGKEY")
fi

if [[ $queue ]]; then
    if [[ -r $queue && ! -d $queue ]]; then
        exec {fd}< "$queue"
    else
        error "$argv0: queue: must be a readable file"
        exit 13
    fi
else
    # http://pubs.opengroup.org/onlinepubs/009695399/basedefs/xbd_chap04.html#tag_04_11
    exec {fd}<<< '//'
fi

if [[ $database ]]; then
    server=$(pacconf --single --repo="$database" Server)
else
    error "$argv0: database: missing argument"
    usage; exit 1
fi

if [[ $root ]]; then
    root=$(realpath -e -- "$root")
else
    root=${server#*://}
fi

if [[ ! -w $root/ || ! -r $root/ ]]; then
    error "$argv0: $root: Permission denied"; exit 13
fi

if ((chroot)); then
    container=${container:-/var/lib/aurbuild}/$machine
    makepkg_conf=/usr/share/devtools/makepkg-$machine.conf

    pacconf --raw > "$tmp"/pacman.conf

    if [[ -f $container/root/.arch-chroot ]]; then
        sudo arch-nspawn \
            -C "$tmp"/pacman.conf -M "$makepkg_conf" \
            "$container"/root pacman -Syu --noconfirm
    else
        sudo install -d "$container" -m 755 -v
        sudo mkarchroot \
            -C "$tmp"/pacman.conf -M "$makepkg_conf" \
            "$container"/root base-devel
    fi

    # Check if target repository is configured in chroot (#161)
    pacconf --root="$container"/root --repo="$database" >/dev/null
else
    conf_single "$database" > "$tmp"/custom.conf
fi

while read -r -u "$fd" pkg _; do
    cd_safe "$basedir/$pkg"

    if ((chroot)); then
        sudo PKGDEST="$root" makechrootpkg \
            -d "$root" -r "$container" "${makechrootpkg_args[@]}"
    else
        PKGDEST="$root" LC_MESSAGES=C makepkg "${makepkg_args[@]}"
    fi

    mapfile -d $'\0' -t pkglist < <(find_package_path "$root")

    # https://bugs.archlinux.org/task/49342
    if type -P repose >/dev/null; then
        LANG=C repose -r "$root" -fv "$database"
    else
        repo-add -nv "$root/$database".db "${pkglist[@]}"
    fi

    if ((sign_pkg)); then
        # https://bugs.archlinux.org/task/49946
        for i in "${pkglist[@]}"; do
            gpg "${gpg_args[@]}" "$i"
        done

        # https://github.com/vodik/repose/issues/46
        gpg "${gpg_args[@]}" "$root/$database".db
    fi

    if ((chroot)); then
        continue
    else        
        # https://github.com/andrewgregory/pacutils/issues/15
        replaces=$(grep -Fxf <(db_replaces "$root/$database".db) <(pacman -Qq) | paste -s -d, -)

        # https://github.com/andrewgregory/pacutils/issues/4
        sudo pacman -Syu --config="$tmp"/custom.conf --ignore="$replaces" --noconfirm
        sudo pacman -Fy  --config="$tmp"/custom.conf
    fi
done

exec {fd}<&-

# vim: set et sw=4 sts=4 ft=sh:
