#!/bin/bash
export PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
set -o pipefail

readonly XDG_CACHE_HOME=${XDG_CACHE_HOME:-$HOME/.cache}
readonly AURDEST=${AURDEST:-$XDG_CACHE_HOME/aursync}

confirm() {
    local -l reply
    local message=$*

    read -rp "$message [Y/n] " reply
    [[ ! $reply || $reply = y?(es) ]]
}

clone() {
    while read -r src; do
	if cd "$AURDEST/$src" 2>/dev/null; then
            if ! git pull -v; then
		return
            fi
	else
            if ! git clone -v https://aur.archlinux.org/"$src".git "$AURDEST/$src"; then
		return
            fi
	fi
    done
}

if aurchain "$@" | tee queue | clone; then
    if confirm 'Inspect build files?'; then
        xargs -a queue -i find {} -maxdepth 1 | vifm - -c '+vie'
    fi
    aurbuild queue
fi
