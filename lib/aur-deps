#!/bin/bash
# aur-deps - order package dependencies
readonly argv0=deps
readonly PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'

# default options
mode=json

find_srcinfo() {
    find "$@" -maxdepth 1 -type f -name .SRCINFO -print0
}

usage() {
    printf -- 'usage: %s [-rs] package [package...]\n' "$argv0" >&2
    exit 1
}

while getopts :rs opt; do
    case $opt in
        r) mode=json ;;
        s) mode=src  ;;
        *) usage     ;;
    esac
done
shift $((OPTIND -1))
OPTIND=1

if ((!$#)); then
    usage
fi

case $mode in
    src)
        mapfile -t arg_path < <(readlink -e -- "$@")

        if [[ -z ${arg_path[*]} ]]; then
            printf -- '%s: no data available\n' "$argv0"
        fi

        find_srcinfo "${arg_path[@]}" | xargs -0 cat | aur arrow | tsort
        ;;
    json)
        printf -- '%s\n' "$@" | aur deps-rpc
        ;;
esac
