#!/bin/bash
PS4='+(${BASH_SOURCE}:${LINENO}): ${FUNCNAME[0]:+${FUNCNAME[0]}(): }'
set -e

readonly argv0=aurbuild
readonly pwd=$PWD

makepkg_args=(-Lsc --holdver)

build_local() {
    PKGDEST="$pool" LC_MESSAGES=C makepkg "${makepkg_args[@]}"
    repose -vf "$database" -r "$root" -p "$pool"
    sudo pacsync "${database%.*}"
}

build_chroot() {
    declare CHROOT=/var/lib/aurbuild

    if [[ ! -d $CHROOT/root ]]; then
	sudo mkdir -p "$CHROOT"
	sudo mkarchroot -C /etc/pacman.conf "$CHROOT"/root base base-devel
    fi

    sudo -E PKGDEST="$pool" makechrootpkg -d "$pool" -c -u -r "$CHROOT" -- --skippgpcheck
    repose -vf "$database" -r "$root" -p "$pool"
}

trap 'exit' INT

source /usr/share/makepkg/util.sh || exit 1

[[ -t 2 ]] && colorize

while getopts :cd:f:p:r: OPT; do
    case $OPT in
	c|+c) build=build_chroot ;;
	d|+d) database="$OPTARG" ;;
	f|+f) makepkg_args+=(-f) ;;
	p|+p) pool="$OPTARG" 	 ;;
	r|+r) root="$OPTARG" 	 ;;
	*) plain "usage: $argv0 [+-cd ARG] [+-f ARG] [+-p ARG] [+-r ARG} [--] ARGS..."
	   exit 1 ;;
    esac
done
shift $((OPTIND - 1))
OPTIND=1

if [[ ! -r $1 ]]; then
    error "$1: not readable (queue)"
    exit 1
fi

# Read from the next available FD to choose providers with makepkg (#21)
exec {fd}< "$1"

while read -r -u {fd} p; do
    if cd "$pwd/$p"; then
	"${build:-build_local}"
    fi
done

exec {fd}<&-

# vim: set sw=4 sts=4:
